<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 手机号登录 -->
    <TextView
        android:layout_marginTop="@dimen/dimen_10dp"
        android:id="@+id/btn_login_options_phone"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/monika_custom_btn_empty_black"
        android:gravity="center"
        android:text="手机号登录"
        android:textColor="@color/color_C4FF05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="手机号登录" />

    <!-- 游客登录 -->
    <TextView
        android:id="@+id/btn_login_options_guest"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/monika_custom_btn_empty_gray"
        android:gravity="center"
        android:text="游客登录"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login_options_phone"
        app:whRatio="5.9433962264"
        tools:text="游客登录" />

    <!-- 分割线 -->
    <View
        android:id="@+id/v_login_options_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login_options_guest" />

    <!-- 微信登录 -->
    <LinearLayout
        android:id="@+id/btn_login_options_wechat_container"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/monika_custom_btn_empty_gray_stroke"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_login_options_line">

        <TextView
            android:id="@+id/btn_login_options_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_page_share_wx_normal"
            android:gravity="center"
            android:text="微信登录"
            android:textColor="@color/black"
            tools:text="微信登录" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

