<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/monika_corner_15_white_bg"
    android:padding="@dimen/dimen_20dp">

    <!-- 支付图标 -->
    <ImageView
        android:id="@+id/iv_payment_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="支付方式图标"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_payment_name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/mine_page_share_wx_normal" />

    <!-- 支付名称 -->
    <TextView
        android:id="@+id/tv_payment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_payment_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="微信支付" />

</androidx.constraintlayout.widget.ConstraintLayout>

