<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_account_edit_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行：头像 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_account_edit_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp"
                android:paddingEnd="@dimen/dimen_15dp"
                android:paddingBottom="@dimen/dimen_5dp">

                <TextView
                    android:id="@+id/tv_account_edit_avatar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="@color/text_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/riv_account_edit_avatar"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="头像" />


                <ImageView
                    android:id="@+id/riv_account_edit_avatar"
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_account_edit_avatar_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_oval="true"
                    tools:src="@drawable/ic_launcher_app" />

                <ImageView
                    android:id="@+id/iv_account_edit_avatar_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/monika_custom_icon_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/riv_account_edit_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/riv_account_edit_avatar"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 第二行：昵称 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_account_edit_nike_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:id="@+id/tv_account_nike_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/text_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="昵称" />


                <TextView
                    android:id="@+id/riv_account_edit_nike_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:textColor="@color/text_666666"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_account_edit_nike_name_arrow"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@id/tv_account_nike_name_title"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="开到茶花" />

                <ImageView
                    android:id="@+id/iv_account_edit_nike_name_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/monika_custom_icon_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/riv_account_edit_nike_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/riv_account_edit_nike_name"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 第三行：个人描述 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_account_edit_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:id="@+id/tv_account_edit_desc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介"
                    android:textColor="@color/text_222222"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="个人简介" />


                <TextView
                    android:id="@+id/tv_account_edit_desc_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:textColor="@color/text_666666"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_account_edit_desc_arrow"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@id/tv_account_edit_desc_title"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="我是一个简介" />

                <ImageView
                    android:id="@+id/iv_account_edit_desc_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/monika_custom_icon_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_account_edit_desc_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_account_edit_desc_content"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 第四行：分割线 -->
            <View
                android:id="@+id/v_account_edit_divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_f5f5f5" />

            <!-- 第五行：手机号 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_account_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:id="@+id/tv_account_edit_phone_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_account_edit_phone_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="手机号" />

                <LinearLayout
                    android:id="@+id/ll_account_edit_phone_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- 未绑定状态 -->
                    <TextView
                        android:id="@+id/tv_account_edit_phone_unbound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未绑定"
                        android:textColor="@color/color_80A113"
                        android:textSize="16sp"
                        android:visibility="gone"
                        tools:text="未绑定"
                        tools:visibility="visible" />

                    <!-- 已绑定状态 -->
                    <LinearLayout
                        android:id="@+id/ll_account_edit_phone_bound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_account_edit_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="138****8888"
                            android:textColor="@color/text_666666"
                            android:textSize="16sp"
                            tools:text="138****8888" />

                        <TextView
                            android:id="@+id/tv_account_edit_phone_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:text="换绑"
                            android:textColor="@color/text_666666"
                            android:textSize="16sp"
                            tools:text="换绑" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_account_edit_phone_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:src="@drawable/monika_custom_icon_arrow"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

