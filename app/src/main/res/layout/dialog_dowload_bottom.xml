<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_all_round"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp">

    <!-- 标题 -->
    <ImageView
        android:id="@+id/tv_download_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/monika_alert_title_system_tip"
        tools:text="下载新版本" />

    <!-- 第一行：正在更新到最新版本x -->
    <TextView
        android:id="@+id/tv_download_dialog_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="center"
        android:text="正在更新到最新版本1.0.0"
        android:textColor="@color/text_666666"
        android:textSize="16sp"
        tools:text="正在更新到最新版本1.0.0" />

    <!-- 第二行：自定义下载进度条 -->
    <com.otto.monika.common.views.DownloadProgressView
        android:id="@+id/dpv_download_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:visibility="gone"
        tools:progress="50" />

    <!-- 第三行：后台下载 -->
    <TextView
        android:id="@+id/tv_download_dialog_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:gravity="center"
        android:text="后台下载"
        android:textColor="@color/text_666666"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="后台下载" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:id="@+id/ll_dialog_download_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <!-- 取消按钮 -->
        <TextView
            android:id="@+id/btn_dialog_download_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:background="@drawable/monika_custom_btn_gray_short"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:text="取消"
            android:textColor="@color/text_000000"
            android:textSize="16sp"
            tools:text="取消" />

        <!-- 确定按钮 -->
        <TextView
            android:id="@+id/btn_dialog_download_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:background="@drawable/monika_custom_btn_black_short"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/padding_15"
            android:text="确定"
            android:textColor="@color/text_c4ff05"
            android:textSize="16sp"
            tools:text="确定" />

    </LinearLayout>

</LinearLayout>
