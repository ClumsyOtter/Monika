<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="1dp"
    android:background="@drawable/rank_list_item_bg"
    android:padding="@dimen/dimen_15dp">

    <!-- 圆形头像 -->
    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/generic_avatar_default" />

    <!-- 姓名 -->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="用户名"
        android:textColor="@color/text_000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tags_recycler"
        app:layout_constraintEnd_toStartOf="@id/rank_subscribe_number_container"
        app:layout_constraintStart_toEndOf="@+id/avatar_image"
        app:layout_constraintTop_toTopOf="@+id/avatar_image"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="张三" />

    <!-- 标签列表（可左右滑动） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tags_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="4dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar_image"
        app:layout_constraintTop_toBottomOf="@+id/name_text" />

    <LinearLayout
        android:id="@+id/rank_subscribe_number_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/name_text">
        <!-- 数字 -->
        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/text_000000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="100" />

        <!-- 数字标签 -->
        <TextView
            android:id="@+id/number_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_4"
            android:text="订阅"
            android:textColor="#ff000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="积分" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_rank_subscribe_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="avatar_image,tags_recycler" />

    <!-- 分割线 -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@color/gray_ee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_rank_subscribe_top" />

    <!-- 图片 -->
    <ImageView
        android:id="@+id/rank_subscribe_rank_number_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:src="@drawable/monika_subscribe_rank_icon_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/rank_subscribe_rank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="N0.1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/rank_subscribe_rank_number_image"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <!-- 描述文字 -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="这是一段描述文"
        android:textColor="@color/font_gray_dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rank_subscribe_rank_number"
        app:layout_constraintTop_toTopOf="@+id/divider"
        tools:text="这是一段描述文字" />

</androidx.constraintlayout.widget.ConstraintLayout>

