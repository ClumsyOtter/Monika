<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 用户信息容器（圆角白色背景） -->
    <!--
    -->
    <LinearLayout
        android:id="@+id/ll_account_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="@drawable/monika_account_head_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_15dp"
        android:paddingEnd="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_15dp">

        <!--     用户外部计算露出的高度   -->
        <LinearLayout
            android:id="@+id/stable_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 用户名称和编辑按钮 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp">

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="280dp"
                    android:maxLines="1"
                    android:textColor="@color/text_000000"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_account_edit"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="用户名" />

                <ImageView
                    android:id="@+id/btn_account_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:src="@drawable/monika_account_edit_icon"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/tv_account_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_account_name"
                    app:layout_constraintTop_toTopOf="@id/tv_account_name"
                    tools:visibility="visible" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 用户标签（流式布局） -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fl_account_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="center_horizontal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_account_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="@dimen/sp_13"
                tools:text="势必要成为散发光芒的天选之星" />

            <com.otto.monika.home.fragment.mine.views.AccountHeadDropDownView
                android:id="@+id/view_account_drop_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:visibility="gone" />

        </LinearLayout>
        <!--显示信息 -->
        <com.otto.monika.home.fragment.mine.views.AccountHeadInfoView
            android:id="@+id/view_account_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp" />

    </LinearLayout>

    <!-- 圆形头像（位于容器上方，上半部分透明，下半部分融入容器） -->
    <com.otto.monika.common.views.CircleImageView
        android:id="@+id/iv_account_avatar"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal|top"
        android:elevation="4dp"
        tools:src="@drawable/generic_avatar_default" />

</FrameLayout>

