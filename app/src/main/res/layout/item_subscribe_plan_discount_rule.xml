<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/monika_corner_15_gary_f7f7f7_bg"
    android:padding="@dimen/dimen_15dp">

    <!-- 左边：月份和价格 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_discount_rule_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ll_discount_rule_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_discount_rule_months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1个月" />

        <TextView
            android:id="@+id/tv_discount_rule_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:textColor="@color/text_999999"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_discount_rule_months"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="¥28" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 右边：折扣（-号+数字+号+折） -->
    <LinearLayout
        android:id="@+id/ll_discount_rule_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 减号按钮 -->
        <ImageView
            android:id="@+id/tv_discount_rule_minus"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:background="@drawable/monika_edit_discount_list_subtract" />

        <!-- 折扣数字 -->
        <TextView
            android:id="@+id/tv_discount_rule_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:text="5"
            android:textColor="@color/text_000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="5" />

        <!-- 加号按钮 -->
        <ImageView
            android:id="@+id/tv_discount_rule_plus"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:background="@drawable/monika_edit_discount_list_add" />

        <!-- 折字 -->
        <TextView
            android:id="@+id/tv_discount_rule_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:text="折"
            android:textColor="@color/text_999999"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

