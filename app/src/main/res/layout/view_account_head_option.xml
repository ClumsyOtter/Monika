<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_12dp"
    android:paddingEnd="@dimen/dimen_15dp"
    android:paddingBottom="@dimen/dimen_12dp">

    <!-- 图标 -->
    <ImageView
        android:id="@+id/iv_option_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/generic_avatar_default" />

    <!-- 名称（上方） -->
    <TextView
        android:id="@+id/tv_option_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:textColor="@color/text_000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_option_desc"
        app:layout_constraintEnd_toStartOf="@id/iv_option_button"
        app:layout_constraintStart_toEndOf="@id/iv_option_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="名称" />

    <!-- 说明（下方） -->
    <TextView
        android:id="@+id/tv_option_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:textColor="@color/text_808080"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_option_button"
        app:layout_constraintStart_toEndOf="@id/iv_option_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_option_name"
        tools:text="说明文字" />

    <!-- 右侧按钮（箭头） -->
    <TextView
        android:id="@+id/iv_option_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/monika_tag_gray_border"
        android:gravity="center"
        android:paddingStart="@dimen/padding_15"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/padding_15"
        android:paddingBottom="@dimen/dimen_5dp"
        android:text="去上传"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

