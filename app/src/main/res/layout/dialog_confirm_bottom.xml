<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_all_round"
    android:orientation="vertical"
    android:padding="@dimen/padding_20">

    <!-- 标题 -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/monika_alert_title_system_tip" />

    <!-- 内容 -->
    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="这是对话框的内容"
        android:textColor="@color/text_808080"
        android:textSize="14sp"
        tools:text="这是对话框的内容" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <!-- 取消按钮 -->
        <TextView
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:background="@drawable/monika_custom_btn_gray_short"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:text="取消"
            android:textColor="@color/text_000000"
            android:textSize="16sp"
            tools:text="取消" />

        <!-- 确定按钮 -->
        <TextView
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:background="@drawable/monika_custom_btn_black_short"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/padding_15"
            android:text="确定"
            android:textColor="@color/text_c4ff05"
            android:textSize="16sp"
            tools:text="确定" />

    </LinearLayout>

</LinearLayout>

