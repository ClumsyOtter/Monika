<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/monika_account_no_creator_bg"
    android:paddingStart="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_20dp"
    android:paddingEnd="@dimen/dimen_15dp"
    android:paddingBottom="@dimen/dimen_20dp">

    <LinearLayout
        android:id="@+id/tv_head_creator_left_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_head_creator_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 左侧文字 -->
        <TextView
            android:id="@+id/tv_head_creator_left_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_808080"
            android:textSize="14sp"
            tools:text="我的收入: " />

        <!-- 左侧数字 -->
        <TextView
            android:id="@+id/tv_head_creator_left_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:textColor="@color/text_000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_head_creator_left_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="¥1,234" />
    </LinearLayout>


    <!-- 分割线（竖线） -->
    <View
        android:id="@+id/view_head_creator_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@color/text_808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_head_creator_right_container"
        app:layout_constraintStart_toEndOf="@id/tv_head_creator_left_container"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tv_head_creator_right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_head_creator_divider"
        app:layout_constraintTop_toTopOf="parent">
        <!-- 右侧文字 -->
        <TextView
            android:id="@+id/tv_head_creator_right_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_808080"
            android:textSize="14sp"
            tools:text="我的粉丝: " />

        <!-- 右侧数字 -->
        <TextView
            android:id="@+id/tv_head_creator_right_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:textColor="@color/text_000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_head_creator_right_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1,234" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
