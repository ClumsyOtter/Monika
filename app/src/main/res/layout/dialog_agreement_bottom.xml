<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_all_round"
    android:orientation="vertical"
    android:padding="@dimen/padding_20">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_agreement_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="同意用户协议和隐私政策"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 内容 -->
    <TextView
        android:id="@+id/tv_agreement_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="平台严格按照法律法规要求保护隐私，请确认并查看《中国移动认证服务条款》，《用户协议》和《隐私政策》
同意以上协议才能正常使用本应用软件"
        android:textColor="@color/text_666666"
        android:textSize="16sp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:orientation="vertical">

        <!-- 确定按钮 -->
        <TextView
            android:id="@+id/btn_agreement_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/monika_custom_btn_empty_black"
            android:gravity="center"
            android:padding="@dimen/padding_15"
            android:text="同意"
            android:textColor="@color/text_c4ff05"
            android:textSize="16sp"
            tools:text="同意" />

        <!-- 取消按钮 -->
        <TextView
            android:id="@+id/btn_agreement_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/monika_custom_btn_empty_gray"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:text="不同意"
            android:textColor="@color/text_000000"
            android:textSize="16sp"
            tools:text="不同意" />


    </LinearLayout>

</LinearLayout>

