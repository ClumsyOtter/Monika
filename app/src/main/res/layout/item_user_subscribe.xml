<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 左边：剩余天数显示 -->
    <LinearLayout
        android:id="@+id/ll_user_subscribe_remaining_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 剩余天数数字 -->
        <TextView
            android:id="@+id/tv_user_subscribe_remaining_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/text_000000"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="30" />

        <!-- 剩余天文字 -->
        <TextView
            android:id="@+id/tv_user_subscribe_remaining_days_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="剩余天"
            android:textColor="@color/text_808080"
            android:textSize="12sp"
            tools:text="剩余天" />

    </LinearLayout>

    <!-- 右边：圆角灰色背景的信息框 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user_subscribe_info_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:background="@drawable/monika_corner_15_gary_f7f7f7_bg"
        android:padding="@dimen/dimen_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_user_subscribe_remaining_days"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 圆形头像 -->
        <ImageView
            android:id="@+id/iv_user_subscribe_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:ignore="ContentDescription"
            tools:src="@drawable/generic_avatar_default" />

        <!-- 名称（头像右边） -->
        <TextView
            android:id="@+id/tv_user_subscribe_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="创作者名称"
            android:textColor="@color/text_000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_user_subscribe_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_user_subscribe_avatar"
            tools:text="创作者名称" />

        <!-- 订阅日期（名称下面） -->
        <TextView
            android:id="@+id/tv_user_subscribe_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="2024年01月01日"
            android:textColor="@color/text_808080"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_user_subscribe_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_user_subscribe_name"
            tools:text="2024年01月01日" />

        <!-- 内容（日期下面） -->
        <TextView
            android:id="@+id/tv_user_subscribe_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:text="这是订阅内容的描述信息"
            android:textColor="@color/text_808080"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_user_subscribe_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_user_subscribe_date"
            tools:text="这是订阅内容的描述信息，可以包含多行文字，展示订阅的详细内容。" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

