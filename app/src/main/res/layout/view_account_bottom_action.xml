<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_20dp">

    <View
        android:id="@+id/account_bottom_subscribe_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@color/bg_f5f5f5"
        app:layout_constraintBottom_toTopOf="@id/fl_account_bottom_subscribe_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/fl_account_bottom_subscribe_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_account_bottom_collection_button"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_account_bottom_subscribe_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:background="@drawable/monika_custom_btn_empty_black"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/monika_account_add_subsribe_title_icon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iv_account_bottom_subscribe_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:background="@drawable/monika_custom_btn_empty_gray"
            android:gravity="center"
            android:text="已订阅(ゝ∀･30天)"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/sp_14" />

    </FrameLayout>

    <com.otto.monika.common.views.MonikaCommonOptionView
        android:id="@+id/iv_account_bottom_collection_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        app:iconSelected="@drawable/monika_post_detail_collect_icon"
        app:iconSize="@dimen/dimen_25dp"
        app:iconUnselected="@drawable/monika_post_detail_collect_unselect_icon"
        app:layout_constraintBottom_toBottomOf="@id/fl_account_bottom_subscribe_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fl_account_bottom_subscribe_container"
        app:optionText="999"
        app:optionTextColor="@color/black"
        app:optionTextSize="@dimen/sp_14" />

</androidx.constraintlayout.widget.ConstraintLayout>

