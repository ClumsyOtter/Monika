<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 排名图标（前三名显示） -->
    <ImageView
        android:id="@+id/iv_account_rank_icon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/monika_subscribe_rank_icon_1"
        tools:visibility="visible" />

    <!-- 排名文字（第四名及以后显示） -->
    <TextView
        android:id="@+id/tv_account_rank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO.4"
        android:textColor="@color/color_7F7F7F"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NO.4"
        tools:visibility="visible" />

    <!-- Barrier 用于处理排名图标和文字的约束 -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="iv_account_rank_icon,tv_account_rank_text" />

    <!-- 圆形头像 -->
    <ImageView
        android:id="@+id/iv_account_rank_avatar"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/generic_avatar_default" />

    <!-- 名称 -->
    <TextView
        android:id="@+id/tv_account_rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="用户名"
        android:textColor="@color/text_000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_account_rank_creator"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/iv_account_rank_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="用户名" />

    <!-- 创作者图标 -->
    <ImageView
        android:id="@+id/iv_account_rank_creator"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:src="@drawable/monika_subscribe_rank_creator_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_account_rank_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/monika_subscribe_rank_creator_icon"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

